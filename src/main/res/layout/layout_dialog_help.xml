<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_lightset">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/navigation_climbing_item0" />

            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/img_play_bottom" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="370dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/img_play" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="250dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/img_operate_method" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="     身体仰卧于地垫上，屈膝成90度左右，脚部平放在地上。平地上切勿把脚部固定（例如由同伴用手按住脚踝），否则大腿和髋部的屈肌便会加入工作，从而降低了腹部肌肉的工作量。"
                        android:textSize="23sp" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/img_remake" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="     身体仰卧于地垫上，屈膝成90度左右，脚部平放在地上。平地上切勿把脚部固定（例如由同伴用手按住脚踝），否则大腿和髋部的屈肌便会加入工作，从而降低了腹部肌肉的工作量。"
                        android:textSize="23sp" />
                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="550dp"
            android:layout_height="90dp"
            android:layout_marginLeft="160dp"

            android:background="@drawable/bg_img_help_title">

        </RelativeLayout>

        <Button
            android:id="@+id/btn_close_help"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="840dp"
            android:layout_marginTop="30dp"

            android:background="@drawable/btn_close_set">

        </Button>
    </RelativeLayout>

</LinearLayout>

